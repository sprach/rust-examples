{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "probe-rs-debug",
            "request": "launch",
            "name": "Debug (probe-rs)",
            "cwd": "${workspaceFolder}",
            "chip": "STM32F103C8",
            "flashingConfig": {
                "flashingEnabled": true,
                "haltAfterReset": true,
                "format": "binary"
            },
            "coreConfigs": [
                {
                    "programBinary": "target/thumbv7m-none-eabi/release/blink1"
                }
            ],
            "preLaunchTask": "Build STM32F1 Firmware"
        },
        {
            "name": "Debug (OpenOCD Free)",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "cwd": "${workspaceFolder}",
            "executable": "target/thumbv7m-none-eabi/release/blink1",
            "device": "STM32F103C8",
            "configFiles": [
                "interface/stlink.cfg",
                "target/stm32f1x.cfg"
            ],
            "runToEntryPoint": "main",
            "preLaunchTask": "Build STM32F1 Firmware"
        }
    ]
}